<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Audio input entitlement -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Screen recording/capture entitlement -->
    <key>com.apple.security.device.screen-capture</key>
    <true/>
    
    <!-- Allow loading arbitrary libraries (for compatibility with Electron) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Disable library validation (needed when spawned by Electron) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow unsigned executable memory (for ScreenCaptureKit) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Hardened Runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
